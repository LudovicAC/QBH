function [ e_new ] = ignoreZerosConsecutifs( e, tolerance )
% choisir tolérance >= 1
m = max(e);
e_new = e;

indicesNonZero = find(e);
N = size(indicesNonZero,1);
        disp 'unpeu'

for k=1:N-1
    if (indicesNonZero(k+1)-indicesNonZero(k) >= 1) and (indicesNonZero(k+1)-indicesNonZero(k) < tolerance)
        disp 'ouiouou'
        for i=indicesNonZero(k)+1:indicesNonZero(k+1)-1
            e_new(i) = m;
            disp 'yess'
        end
    end
end


end

